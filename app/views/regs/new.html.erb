
<%= javascript_include_tag 'reg' %>
<div class ="main" style="width:20; float:left" >
<br>
<br>

<%= image_tag("download.jpg", :alt => "rss feed", :size => "550x600", :class =>"mySlides") %>
 

</div>
 <div class ="container" style="width:10; float:right">
<h1>Register Here</h1>
<br>
<%= form_for @reg, url:{action: "create"} do |f| %>
<p>
<%= f.label :Username %>
<%= f.text_field :username %>
</p>
<p>
<%= f.label :Password %>
<%= f.password_field  :password %>
</p>
<p>
<%= f.label :Date_Of_Birth %>
<%= f.date_select  :dateofbirth %>
</p>
<p>
<%= f.label :Email %>
<%= f.text_field  :email %>
</p>
<p>
<%= f.label :Telephone %>
<%= f.text_field  :telephone %>
</p>
<p>
<%= f.label :Address %>
<%= f.text_area  :address, :maxlength => "254px" %>
</p>
<p>
<%= f.label :City %>
<%= f.text_field  :city %>
</p>
<p>
<%= f.label :Postal_Code %>
<%= f.text_field  :postcode %>
</p>


<p>
<%= f.submit("create") %>
</p>
<p>Note: Please make sure your details are correct before<br/>
 submitting form and that all fields marked with * are completed!.</p>
</div>
<% end %>
